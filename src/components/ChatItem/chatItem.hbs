<li class="chat-item chat-item__wrapper {{#if isSelected}} __active  {{/if}}">
  <div class="chat-item__avatar">
    {{#if avatar}}
      <img src="{{avatar}}" alt="Avatar">
    {{/if}}
  </div>
  <div class="chat-item__context">
    <div class="chat-item__name">{{title}}</div>
    <div class="chat-item__last">{{last_message.content}}</div>
  </div>
</li>
